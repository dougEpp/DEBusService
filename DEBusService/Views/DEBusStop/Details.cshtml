@model DEBusService.Models.busStop

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Bus Stop @Model.busStopNumber</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.location)
        </dd>

        <dt>
            Location hash
        </dt>

        <dd>
            @Html.DisplayFor(model => model.locationHash)
        </dd>

        <dt>
            Going Downtown
        </dt>

        <dd>
            @Html.DisplayFor(model => model.goingDowntown)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.busStopNumber }) |
    @Html.ActionLink("Back to List", "Index")
</p>
