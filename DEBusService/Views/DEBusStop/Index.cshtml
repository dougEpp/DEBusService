@model IEnumerable<DEBusService.Models.busStop>

@{
    ViewBag.Title = "Bus Stops";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Bus Stop Number", "Index", new { orderBy = "busStopNumber" }, null)
        </th>
        <th>
            @Html.ActionLink("Location", "Index", new { orderBy = "location" }, null)
        </th>
        <th>
            Location Hash
        </th>
        <th>
            Going Downtown
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.busStopNumber)
            </td>
            <td>
                @Html.ActionLink(item.location, "RouteSelector", new { id = item.busStopNumber }, new { @class=((item.routeStops.Count == 0)?"disabled":"") } )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.locationHash)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.goingDowntown)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.busStopNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.busStopNumber }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.busStopNumber })
            </td>
        </tr>
    }

</table>
